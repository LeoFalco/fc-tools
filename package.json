{
  "name": "fc-tools",
  "version": "1.0.0",
  "description": "Kit com ferramentas e scripts para fluxos de trabalhos de desenvolvedores da field control",
  "main": "src/index.js",
  "type": "commonjs",
  "bin": {
    "field": "src/index.js"
  },
  "scripts": {
    "test": "npx jest",
    "lint": "npx eslint . --cache",
    "lint-fix": "npx eslint . --fix --cache",
    "build": "npx pkg ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeoFalco/fc-tools.git"
  },
  "keywords": [
    "cli",
    "scripts",
    "field-control"
  ],
  "author": "leonardo.falco@outlook.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LeoFalco/fc-tools/issues"
  },
  "homepage": "https://github.com/LeoFalco/fc-tools#readme",
  "devDependencies": {
    "eslint": "8.34.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.6.1",
    "eslint-plugin-promise": "6.1.1",
    "jest": "29.4.3",
    "pkg": "5.8.0"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "10.0.0",
    "execa": "5.1.1",
    "inquirer": "8.2.5",
    "octokit": "2.0.14",
    "yaml": "2.2.1"
  },
  "pkg":{
    "outputPath": "dist",
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "scripts": [
      "src/**/*"
    ]
  }
}
